<%- include('./includes/head.ejs') %>
    <link rel="stylesheet" href="/css/backend/add-admins.css">
    <title><%= title %></title>
    </head>

    <body class="home-page-body" dir="rtl">

        <%- include('./includes/header.ejs') %>

            <div class="home-page-container">

                <%- include('./includes/sidbar.ejs') %>

                    <div class="tabs-side">
                        <div class="tabs-header">
                            اضافة ادمن 
                        </div>
                        <div class="main-background-content">
                            <form class="bg-forms" id="registeration_form">
                                <div id="box-error">

                                </div>
                                <div class="mb-3 two_inline_inputs">
                                    <div class="first_name">
                                        <label for="firstName" class="form-label">الاسم الأول</label>
                                        <input type="text" id="firstName" name="firstName" class="form-control"
                                            required>
                                    </div>
                                    <div class="lastName">
                                        <label for="last_name" class="form-label">الأسم الثاني</label>
                                        <input type="text" id="lastName" name="lastName" class="form-control" required>
                                    </div>
                                </div>
                                <div class="mb-3 username">
                                    <label for="username" class="form-label">اسم المستخدم</label>
                                    <input class="form-control" type="text" id="username" name="username" required>
                                </div>
                                <div class="mb-3 two_inline_inputs">
                                    <div class="password">
                                        <label for="password" class="form-label">كلمة المرور</label>
                                        <input class="form-control" type="password" id="password" name="password"
                                            required>
                                    </div>
                                    <div class="confirm_password">
                                        <label for="repeat_password" class="form-label">تأكيد كلمة المرور</label>
                                        <input required type="password" class="form-control" type="password"
                                            id="repeatPassword" name="repeat_password" required>
                                    </div>
                                </div>
                                <div class="mb-3 two_inline_inputs">
                                    <div class="position">
                                        <label for="position" class="form-label">المنصب</label>
                                        <input class="form-control" type="text" id="position" name="position" required>
                                    </div>
                                    <div class="permission">
                                        <label for="permissions" class="form-label">الصلاحيات</label>
                                        <input class="form-control" type="text" id="permissions" name="permissions"
                                            required>
                                    </div>
                                </div>
                                <div class="image-main-lable mb-2">
                                    الصورة الشخصية للمستخدم
                                </div>
                                <div class="input-group mb-5 bg-file">
                                    <input required class="form-control" type="file" id="image" name="image"
                                        accept="image/*" required>
                                </div>
                                <div class="col-auto">
                                    <button type="submit" class="btn btn-primary mb-3">اضافة مستخدم جديد</button>
                                </div>
                            </form>
                        </div>
                    </div>
            </div>
            <script src="/javascript/backend/includes/logout.js"></script>
            <script src="/javascript/backend/add-admins.js"></script>
    </body>

    </html>